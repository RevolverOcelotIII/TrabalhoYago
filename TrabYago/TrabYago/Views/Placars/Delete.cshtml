@model TrabYago.Models.Placar

@{
    ViewData["Title"] = "Delete";
}
<h3>Tem certeza que deseja deletar este placar?</h3>
<div>
    <h4>Placar</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPontos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPontos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPontuacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPontuacao)
